{
	"compilerOptions": {
		"lib": ["ES2016", "DOM"],
		"allowJs": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"strict": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
	},
	"include": ["next-env.d.ts", "**/*.ts"],
	"exclude": ["node_modules"]
}
